#Jupyter-lab settings:
function jllocal {
  port=1377
  remote_username=bsreedha
  remote_hostname=ozstar.swin.edu.au
  url="http://localhost:$port"
  echo "Opening $url"
  #xdg-open "$url"
  open -a "Safari" $url
  cmd="ssh -CNL localhost:"$port":localhost:"$port" $remote_username@$remote_hostname"
  echo "Running '$cmd'"
  eval "$cmd"
}

